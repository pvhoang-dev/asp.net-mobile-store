@using BTL_QuanLyBanDienThoai.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title {
    Create Category

    <a class="btn btn-outline-primary float-right align-items-center"
       href="/Admin/Categories">
        <i class="uil uil-corner-up-left-alt"></i>&nbsp;Back
    </a>
}

@model Category

<div class="card">
    <form method="post">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Name"  for="name">Name</label>
                    <input asp-for="Name" type="text" id="name" class="form-control">
                </div>
            </div>
        </div>
        <div class="card-footer float-right border-0 bg-transparent">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>



