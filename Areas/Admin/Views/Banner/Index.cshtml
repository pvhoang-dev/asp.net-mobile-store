@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using BTL_QuanLyBanDienThoai.Models;

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title {
     Banner

    <a class="btn btn-primary float-right align-items-center"
       href="/Admin/Banners/Create">
        Add New
    </a>
}

@model List<Banner>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive users-table">
            <table class="table table-centered mb-0 " id="attributes-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Title</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var banner in Model)
                    {
                        <tr>
                            <td>@banner.Name</td>
                            <td>@banner.Title</td>
                            <td>
                                <img src="/@banner.Image"
                                     width="50"
                                     height="50"
                                     style="border-radius: 5px" />
                            </td>
                            <td>
                                <div class='btn-group'>
                                    <a asp-area="Admin" asp-controller="Banner" asp-action="Edit" asp-route-id="@banner.Id" class="action-icon">
                                        <i class="mdi mdi-pencil"></i>
                                    </a>
                                    <a onclick="HandleDelete(@banner.Id)" href="javascript:void(0)" class="action-icon">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }

                    
                </tbody>
            </table>
        </div>

        <div class="card-footer clearfix">
            <div class="float-right">
                @* @include('adminlte-templates::common.paginate', ['records' => $attributes]) *@
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        function HandleDelete(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "POST",
                        url: "/Admin/Banners/Delete",
                        data: {
                            id: id
                        },

                        success: function (response) {
                            Swal.fire(
                                'Deleted!',
                                'Category has been deleted.',
                                'success'
                            )
                            setTimeout(
                                function () {
                                    location.reload();
                                }, 700);
                        }
                    });
                }
            })

        }
    </script>
}   