@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using BTL_QuanLyBanDienThoai.Models.ViewModel;
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title {
    Create Product

    <a class="btn btn-outline-primary float-right align-items-center"
       href="/admin/Products">
        <i class="uil uil-corner-up-left-alt"></i>&nbsp;Back
    </a>
}

@model ProductViewModel

<div class="card">
    <form asp-controller="Product" asp-action="Create">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Name">Name:</label>
                    <input asp-for="Name" type="text" class="form-control" required>
                </div>

                <div class="form-group col-sm-6">
                    <label asp-for="Quantity">Quantity:</label>
                    <input asp-for="Quantity" type="number" class="form-control">
                </div>

                <div class="form-group col-sm-6">
                    <label>Category:</label>
                    <select name="category_id" id="category_id" class="custom-select">
                        <option>Select a category</option>
                        @foreach(var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group col-sm-6">
                    <label asp-for="Price">Price:</label>
                    <input asp-for="Price" type="number" class="form-control">
                </div>

                <div class="form-group col-12">
                    <label asp-for="Description">Description:</label>
                    <input asp-for="Description" type="text" class="form-control">
                </div>

                <!-- File Upload -->
                @* <div class="form-group col-12 tab-content">
                    <label>Images:</label>
                    <div class="tab-pane show active" id="file-upload-preview">
