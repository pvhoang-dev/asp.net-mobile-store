@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using BTL_QuanLyBanDienThoai.Models.ViewModel;
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title {
    Create Product

    <a class="btn btn-outline-primary float-right align-items-center"
       href="/admin/Products">
        <i class="uil uil-corner-up-left-alt"></i>&nbsp;Back
    </a>
}

@model ProductViewModel

<div class="card">
    <form asp-controller="Product" asp-action="Create" enctype="multipart/form-data">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Name">Name:</label>
                    <input asp-for="Name" type="text" class="form-control" required>
                </div>

                <div class="form-group col-sm-6">
                    <label asp-for="Quantity">Quantity:</label>
                    <input asp-for="Quantity" type="number" class="form-control">
                </div>

                <div class="form-group col-sm-6">
                    <label>Category:</label>
                    <select name="category_id" id="category_id" class="custom-select">
                        <option>Select a category</option>
                        @foreach(var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group col-sm-6">
                    <label asp-for="Price">Price:</label>
                    <input asp-for="Price" type="number" class="form-control" required>
                </div>

                <div class="form-group col-12">
                    <label asp-for="Description">Description:</label>
                    <input asp-for="Description" type="text" class="form-control">
                </div>

                <!-- File Upload -->
                <div class="form-group col-12 tab-content">
                    <label asp-for="ImageDefault">Images:</label>
                    <div class="tab-pane show active" id="file-upload-preview">
                        <div onclick="chooseFile()" class="dropzone" id="myAwesomeDropzone" data-plugin="dropzone" data-previews-container="#file-previews"
                             data-upload-preview-template="#uploadPreviewTemplate">
                            <div class="fallback">
                                <input hidden asp-for="Photo" class="form-control" id="proImg" type="file" onchange="ChangeFile(this)" />
                                <input type="text" asp-for="ImageDefault" class="form-control" hidden />
                            </div>

                            <div class="dz-message needsclick">
                                <i class="h1 text-muted dripicons-cloud-upload"></i>
                                <h4>Drop files here or click to upload.</h4>
                            </div>
                        </div>
                        <!-- Preview -->
                        <div class="d-none dropzone-previews mt-3" id="file-previewss">
                            <div class="" id="uploadPreviewTemplatee">
                                <div class="card mt-1 mb-0 shadow-none border">
                                    <div class="p-2">
                                        <div class="row align-items-center">
                                            <div class="col-auto">
                                                <img id="preImg" data-dz-thumbnail src="#" class="avatar-sm rounded bg-light" alt="">
                                            </div>
                                            <div class="col pl-0">
                                                <a href="javascript:void(0);" class="text-muted font-weight-bold" data-dz-name></a>
                                                <p class="mb-0" data-dz-size id="preImgName"></p>
                                            </div>
                                            <div class="col-auto">
                                                <!-- Button -->
                                                <a href="" class="btn btn-link btn-lg text-muted" data-dz-remove>
                                                    <i class="dripicons-cross"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- end preview-->
                </div> <!-- end tab-content-->
            </div>
        </div>
        <div class="card-footer float-right border-0 bg-transparent">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>

<script>
    function chooseFile() {
        document.querySelector('#proImg').click();
        //$('#proImg').click();
    }
    function ChangeFile(input) {
        var currentFile = $('#proImg')[0].files[0];
        var fileName = currentFile.name;

        $('#file-previewss').removeClass('d-none');

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#preImg').attr('src', e.target.result);
                $('#preImgName').text(fileName);
            };

            reader.readAsDataURL(input.files[0]);
        }

        $('input[name="ImageDefault"]').val(fileName);
    }
</script>