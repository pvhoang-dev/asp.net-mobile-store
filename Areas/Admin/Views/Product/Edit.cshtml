@using BTL_QuanLyBanDienThoai.Models.ViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title {
                    Edit Product

    <a class="btn btn-outline-primary float-right align-items-center"
       href="/admin/Products">
        <i class="uil uil-corner-up-left-alt"></i>&nbsp;Back
    </a>
}

@model ProductViewModel

<div class="card">
    <form asp-controller="Product" asp-action="Edit">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Name" for="name">Name:</label>
                    <input asp-for="Name" type="text" name="name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-group col-sm-6">
                    <label asp-for="Quantity" for="quantity">Quantity:</label>
                    <input asp-for="Quantity" type="number" name="quantity" class="form-control">
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group col-sm-6">
                    <label for="category_id">Category:</label>
                    <select name="category_id" class="custom-select">
                        @foreach (var category in Model.Categories)
                        {
                            @if (@category.Id == Model.CategoryId)
                            {
                                <option selected value="@category.Id">@category.Name</option>
                            }
                            else
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }

                    </select>
                </div>

                <div class="form-group col-sm-6">
                    <label asp-for="Price" for="price">Price:</label>
                    <input asp-for="Price" type="number" name="price" class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>

                <div class="form-group col-12">
                    <label asp-for="Description" for="description">Description:</label>
                    <input asp-for="Description" type="text" name="description" class="form-control">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer float-right border-0 bg-transparent">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title d-flex justify-content-between align-items-center">
                Product Variant
                <a asp-controller="ProductVariant" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-primary float-right align-items-center">
                    Add New
                </a>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive users-table">
            <table class="table table-centered mb-0 " id="products-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th class="d-none d-sm-table-cell">Qty</th>
                        <th class="d-none d-sm-table-cell">Price</th>
                        <th class="d-none d-lg-table-cell">Slug</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var proVariant in Model.ProductVariants)
                    {
                        <tr>
                            <td>@proVariant.Name</td>
                            <td class="d-none d-sm-table-cell">
                                <h4><span class="badge badge-primary">@proVariant.Quantity</span></h4>
                            </td>
                            <td class="d-none d-sm-table-cell">@proVariant.Price</td>
                            <td class="d-none d-lg-table-cell">@proVariant.Slug</td>
                            <td>
                                <div class='btn-group'>
                                    <a asp-area="admin" asp-controller="ProductVariant" asp-action="Edit" asp-route-id="@proVariant.Id" class="action-icon">
                                        <i class="mdi mdi-pencil"></i>
                                    </a>
                                    <a href="" class="action-icon">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer clearfix">
            <div class="float-right">
                @* @include('adminlte-templates::common.paginate', ['records' => $products]) *@
            </div>
        </div>
    </div>
</div>