@using BTL_QuanLyBanDienThoai.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title {
        Attribute Values

    <a class="btn btn-primary float-right align-items-center"
       href="/admin/attribute-values/create">
        Add New
    </a>
}

@model List<AttributeValue>

<div class="card-body p-0">
    <div class="table-responsive users-table">
        <table class="table table-centered mb-0 " id="attribute-values-table">
            <thead>
            <tr>
                <th>Attribute</th>
                <th>Value</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
                @foreach(var attributeValue in Model)
                {
                    <tr>
                        <td>Size</td>
                        <td>S</td>
                        <td>
                            <div class='btn-group'>
                                <a href="/admin/attribute-values/edit" class="action-icon">
                                    <i class="mdi mdi-pencil"></i>
                                </a>
                                <a href="" class="action-icon">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer clearfix">
        <div class="float-right">
            @* @include('adminlte-templates::common.paginate', ['records' => $attributeValues]) *@
        </div>
    </div>
</div>
