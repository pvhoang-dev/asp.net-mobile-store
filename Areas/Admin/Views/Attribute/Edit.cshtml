@using BTL_QuanLyBanDienThoai.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Attribute";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title {
    Edit Attribute

    <a class="btn btn-outline-primary float-right align-items-center"
       href="/admin/Attributes">
        <i class="uil uil-corner-up-left-alt"></i>&nbsp;Back
    </a>
}

@model Attr

<div class="card col-md-6">
    <form method="post" id="form">
        <input asp-for="Id" hidden />
        <div class="card-body">
            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Name" class="required-input">Name</label>
                    <input asp-for="Name" type="text" class="form-control" onchange="clearError('Name')">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer float-right border-0 bg-transparent">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>


@section Scripts{
    @if (ViewBag.Message != null)
    {
        <script>
            Swal.fire(
                'Status',
                "@ViewBag.Message",
                "@ViewBag.Text"
            )
        </script>
    }


    <script>
        function clearError(errorSpanId) {
            $("#" + errorSpanId).html("");
        }
        $(document).on("ready", function () {
            $("#form").submit(function (event) {
                event.preventDefault();
                console.log("Submit")

                $.ajax({
                    url: "/Admin/Attributes/Edit/" + @Model.Id,
                    type: "POST",
                    data: $("#form").serialize(),
                    success: function (result) {
                        if (result.isValid) {
                            Swal.fire(
                                'Success!',
                                'Edit added successfully',
                                'success'
                            )
                        } else {
                            console.log(result.errors)
                            var error = result.errors[0];
                            $("#Name").html(error);
                        }
                    }
                })
            })
        })
    </script>
}