@using BTL_QuanLyBanDienThoai.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model List<Attr>

@section Title {
    Attributes

    <a class="btn btn-primary float-right align-items-center"
       href="/admin/attributes/create">
        Add New
    </a>
}

<div class="card-body p-0">
    <div class="table-responsive users-table">
        <table class="table table-centered mb-0 " id="attributes-table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
                @foreach(var attr in Model)
                {
                    <tr>
                        <td>@attr.Name</td>
                        <td>
                            <div class='btn-group'>
                                <a asp-area="admin" asp-controller="Attribute" asp-action="Edit" asp-route-id="@attr.Id" class="action-icon">
                                    <i class="mdi mdi-pencil"></i>
                                </a>
                                <a asp-area="admin" asp-controller="Attribute" asp-action="Delete" asp-route-id="@attr.Id" class="action-icon">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>

    <div class="card-footer clearfix">
        <div class="float-right">
            @* @include('adminlte-templates::common.paginate', ['records' => $attributes]) *@
        </div>
    </div>
</div>
