@using BTL_QuanLyBanDienThoai.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create Attribute";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title {
            Create Attribute

    <a class="btn btn-outline-primary float-right align-items-center"
       href="/admin/Attributes">
        <i class="uil uil-corner-up-left-alt"></i>&nbsp;Back
    </a>
}

@model Attr

<div class="card col-md-6">
    <form method="post" id="form">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Name" class="required-input">Name</label>
                    <input asp-for="Name" type="text" id="name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
        </div>
        <div class="card-footer float-right border-0 bg-transparent">
            <button type="button" class="btn btn-primary" id="create">Create</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).on('ready', () => {
            $('#create').on('click', function () {
                var name = $("#Name").val().trim();

                if (name != "") {
                    Swal.fire(
                        'Success!',
                        'Atribute added successfully',
                        'success'
                    )
                    setTimeout(
                        function () {
                            $("#form").submit();
                        }, 1000);
                } else {
                    Swal.fire(
                        'Warning!',
                        'Please enter all fields',
                        'warning'
                    )
                    return;
                }
            });
        });
    </script>
    @if (ViewBag.Message != null)
    {
        <script>
            Swal.fire(
                'Warning',
                "@ViewBag.Message",
                'warning'
            )
        </script>
    }
}