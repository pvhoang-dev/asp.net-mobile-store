@using BTL_QuanLyBanDienThoai.Models;
@using BTL_QuanLyBanDienThoai.Models.ViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title {
     Order Details

    <a class="btn btn-outline-primary float-right align-items-center"
       href="/admin/Orders">
        <i class="uil uil-corner-up-left-alt"></i>&nbsp;Back
    </a>
}

@model OrderShowViewModel

<div class="card">
    <div class="card-body ">
        <div class="row">
            <div class="form-group col-sm-6">
                <label asp-for="UserId">UserId</label>
                <input asp-for="UserId" type="text" class="form-control" disabled>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="Phone">Phone</label>
                <input asp-for="Phone" type="text" class="form-control" disabled>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="FirstName">FirstName</label>
                <input asp-for="FirstName" type="text" class="form-control" disabled>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="LastName">LastName</label>
                <input asp-for="LastName" type="text" class="form-control" disabled>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="City">City</label>
                <input asp-for="City" type="text" class="form-control" disabled>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="District">District</label>
                <input asp-for="District" type="text" class="form-control" disabled>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="Ward">Ward</label>
                <input asp-for="Ward" type="text" class="form-control" disabled>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" type="text" class="form-control" disabled>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="Amount">Amount</label>
                <input asp-for="Amount" type="text" class="form-control" disabled>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="CreateAt">CreateAt</label>
                <input asp-for="CreateAt" type="text" class="form-control" disabled>
            </div>
            <div class="form-group col-12">
                <label asp-for="Note">Note</label>
                <input asp-for="Note" type="text" class="form-control" disabled>
            </div>
            
            <div class="col-12 form-group table-responsive users-table">
                <label asp-for="orderItemList">Items</label>
                <table class="table table-striped table-centered mb-0" id="products-table">
                    <table class="table table-hover table-centered mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.orderItemList)
                            {
                                <tr>
                                    <td>@item.ProductVariantId</td>
                                    <td>@item.Price</td>
                                    <td><span class="badge badge-primary">@item.Quantity</span></td>
                                    <td>@(item.Price * item.Quantity)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </table>
            </div>
        </div>
    </div>
</div>
