@using BTL_QuanLyBanDienThoai.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title {
                        Orders
}

@model List<Order>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive users-table">
            <table class="table table-centered mb-0 " id="products-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th class="d-none d-sm-table-cell">UserID</th>
                        <th class="d-none d-sm-table-cell">Amount</th>
                        <th class="d-none d-lg-table-cell">Create At</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>id</td>
                        <td class="d-none d-sm-table-cell">8qbv</td>
                        <td class="d-none d-sm-table-cell">10000</td>
                        <td class="d-none d-lg-table-cell">time</td>
                        <td>
                            <div class='btn-group'>
                                <a asp-area="admin" asp-controller="Product" asp-action="Edit" asp-route-id="" class="action-icon">
                                    <i class="mdi mdi-pencil"></i>
                                </a>
                                <a onclick="HandleDelete()" href="javascript:void(0)" class="action-icon">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="card-footer clearfix">
            <div class="float-right">
                @* @include('adminlte-templates::common.paginate', ['records' => $products]) *@
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            function HandleDelete(id) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "POST",
                            url: "/Admin/Products/Delete",
                            data: {
                                id: id
                            },
                            success: function (response) {
                                Swal.fire(
                                    'Deleted!',
                                    'Product has been deleted.',
                                    'success'
                                )
                                setTimeout(function () {
                                    location.reload();
                                }, 700);
                            }
                        });
                    }
                })
            }
        });
    </script>
}   