    <div class="container">
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
                    <!-- Block1 -->
                    <div class="block1 wrap-pic-w">
                        <img src="/@category.Image" alt="IMG-CATEGORIES" />

