<!-- Cart -->

<div class="wrap-header-cart js-panel-cart">
    <div class="s-full js-hide-cart"></div>

    <div class="header-cart flex-col-l p-l-65 p-r-25">
        <div class="header-cart-title flex-w flex-sb-m p-b-8">
            <span class="mtext-103 cl2">
                Your Cart
            </span>

            <div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
                <i class="zmdi zmdi-close"></i>
            </div>
        </div>
        @{
            decimal Total = 0;
        }
        <div class="header-cart-content flex-w js-pscroll">
            <ul class="header-cart-wrapitem w-full">
                @foreach (var item in Model.Cart)
                {

                    <li class="header-cart-item flex-w flex-t m-b-12">
                        <div class="header-cart-item-img">
                            <img src="~/web/assets/images/item-cart-01.jpg" alt="IMG">
                        </div>

                        <div class="header-cart-item-txt p-t-8">
                            <a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
                                @item.Name
                            </a>
                            @{
                                decimal totalPrice = (decimal)item.Quantity * (decimal)item.Price;
                                Total += totalPrice;
                                qty += item.Quantity;
                            }
                            <span class="header-cart-item-info">
                                @item.Quantity x @item.Price đ
                            </span>
                        </div>
                    </li>
                }
            </ul>

            <div class="w-full">
                <div class="header-cart-total w-full p-tb-40">
                    Total: @Total đ
                </div>

                <div class="header-cart-buttons flex-w w-full">
                    <a asp-controller="Cart" asp-action="Index" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
                        View Cart
                    </a>

                    <a href="shoping-cart.html" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
                        Check Out
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function updateCartItemCount() {
        var cartItemCount = getCartItemCount();

        $("#cartIcon").attr("data-notify", cartItemCount);
    }

    function getCartItemCount() {
        return @qty
                        }
    updateCartItemCount();
</script>

<script type="text/javascript">

    $(document).ready(function () {
        $("#search").click(function () {
           $(".result_product").attr('style', 'visibility:visible');
            let input = $('.input_search').val();
            searchAjax(input);
        });

        $(".input_search").on("input", function () {
            $(".result_product").attr('style', 'visibility:visible');
            let input = $(this).val();
            searchAjax(input);
        });
    });

    function searchAjax(input) {
        $.ajax({
            headers: {
                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
            },
            url: '/products/ajax-search',
            type: 'GET',
            dataType: 'json',
            data: { searchValue: input },
            success: function (data) {
                if (data.success) {
                    $(".result_product").empty();
                    let html = "";
                    let products = data.data;
                    $.each(products, function (key, value) {
                        let price = value.price;
                        var productDetail = `/home/products/detail/${value.id}`;

                        html += `<div class="result_product_item m-b-10 m-t-10 p-l-30">
                                        <table>
                                            <tbody>
                                                <tr>
                                                    <td style="vertical-align:top">
                                                          <a href="${productDetail}">
                                                                 <img src="${value.imageDefault}" width="50" style="margin-right:50px;">
                                                           </a>
                                                        </td>
                                                        <td>
                                                                    <a class="suggest_link text-dark" href="${productDetail}">
                                                                ${value.name}
                                                            </a>

                                                                         <p class="m-t-10 .text-muted">
                                                                 $${price}
                                                             </p>
                                                            </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>`
                    });
                    $(".result_product").append(html);
                } else {
                    console.log('Lỗi xử lý trên máy chủ: ' + data.error);
                }
            },
            error: function () {
                console.log('Lỗi khi thực hiện yêu cầu.');
            }
        });
    }
</script>
